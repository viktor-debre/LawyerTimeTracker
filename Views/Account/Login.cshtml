@model LawyerTimeTracker.ViewModels.LoginModel
@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}
<div class="login-form">
    <h2>Log in</h2>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Input email</label>
                <input type="text" asp-for="Email"/>
                <span asp-validation-for="Email"/>
            </div>
            <div class="form-group">
                <label asp-for="Password">Input password</label>
                <input asp-for="Password"/>
                <span asp-validation-for="Password"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-outline-dark"/>
            </div>
        </div>
    </form>
</div>