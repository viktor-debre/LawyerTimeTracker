@model IEnumerable<Issue>
@{
    ViewBag.Title = "Tasks";
}
@{
    List<Issue> toDo = new();
    List<Issue> inProgress = new();
    List<Issue> done = new();
}
@foreach (var item in Model)
{
    if (@item.StartTime == null && @item.EndTime == null)
    {
        toDo.Add(item);
    }
    else if (@item.EndTime == null)
    {
        inProgress.Add(item);
    }
    else
    {
        done.Add(item);
    }
}
<div class="board">
    <div class="board-column">
        <div class="board-column-title">To do</div>
        <div class="board-column-items">
            @foreach (var issue in toDo)
            {
                <div class="board-column-issue">
                    <div class="board-column-issue-title">@issue.Title</div>
                    <div class="board-column-issue-item">@issue.Description</div>
                    <div class="board-column-issue-item">@issue.TypeOfTask</div>
                </div>
            }
        </div>
    </div>
    <div class="board-column">
        <div class="board-column-title">In progress</div>
        <div class="board-column-items">
            @foreach (var issue in inProgress)
            {
                <div class="board-column-issue">
                    <div class="board-column-issue-title">@issue.Title</div>
                    <div class="board-column-issue-item">@issue.Description</div>
                    <div class="board-column-issue-item">@issue.TypeOfTask</div>
                    <div class="board-column-issue-item">Start time: @issue.StartTime</div>
                </div>
            }
        </div>
    </div>
    <div class="board-column">
        <div class="board-column-title">Done</div>
        <div class="board-column-items">
            @foreach (var issue in done)
            {
                <div class="board-column-issue">
                    <div class="board-column-issue-title">@issue.Title</div>
                    <div class="board-column-issue-item">@issue.Description</div>
                    <div class="board-column-issue-item">@issue.TypeOfTask</div>
                    <div class="board-column-issue-item">Start time: @issue.StartTime</div>
                    <div class="board-column-issue-item">End time: @issue.EndTime</div>
                </div>
            }
        </div>
    </div>
</div>