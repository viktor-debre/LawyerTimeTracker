@model LawyerTimeTracker.ViewModels.RegisterModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div id="input-reg">
        <div>
            <label asp-for="Email">Input user email</label><br/>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="FirstName">Input first name</label><br/>
            <input type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"/>
        </div>
        <div>
            <label asp-for="LastName">Input last name</label><br/>
            <input type="text" asp-for="LastName"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div>
            <label asp-for="Password">Input password</label><br/>
            <input id = "password-style" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Repeat password</label><br/>
            <input id = "password-style" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div>
            <input type="submit" value="Registration"/>
        </div>
    </div>
    <div class="validation" asp-validation-summary="All"></div>
</form>